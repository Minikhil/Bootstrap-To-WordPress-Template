class TimeClass
	private msecs_
	
	private function hour
		hour = msecs_ \ 3600000 mod 24
	end function
	
	private function minute
		minute = (msecs_ \ 60000) mod 60
	end function
	
	private function second
		second = (msecs_ \ 1000) mod 60
	end function
	
	private function msec
		msec = msecs_ mod 1000
	end function
end class